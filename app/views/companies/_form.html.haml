= simple_form_for @company, :html => { class: 'form-horizontal', novalidate: false} do |f| 
	.form-group
		= f.input :name, label: false, placeholder: "#{t(:name)}", :input_html => {class: "form-control"}
	.form-group
		= f.input :stock_ticker_symbol, label: false, placeholder: "#{t(:stock_ticker_symbol)}", :input_html => {class: "form-control", required: true}

	.form-group
		= f.button :submit, "#{t(:save)}", class: "btn-default"
