.tabpanel.main-dashboard{:role => "tabpanel"}
  .dashboard-nav
    .container-fluid
      .row
        .col-md-12
          %h1.page-header   
            %span#section-name
              = @company.name
            = render partial: "granularity_buttons"
          .top-dashboard
            %ul.nav.nav-tabs{:role => "tablist"}
              %li.active{:role => "presentation"}
                %a{"aria-controls" => "sentiments", "data-toggle" => "tab", :href => "#tab1", :role => "tab"} Сантименты
              %li{:role => "presentation"}
                %a{"aria-controls" => "model", "data-toggle" => "tab", :href => "#tab2", :role => "tab"} Модель
              %li{:role => "presentation"}
                %a{"aria-controls" => "messages", "data-toggle" => "tab", :href => "#tab3", :role => "tab"} Прогноз
            
  .dashboard-down
    #executive-dashboard.tab-content
      #tab1.tab-pane.active{:role => "tabpanel"}
        .container-fluid
          = render partial: "company"
      #tab2.tab-pane{:role => "tabpanel"}
        .container-fluid
          = render partial: "model"


:javascript
  $(function(){
    $('[data-chart="true"]').each(function(){
      var hc = new HighchartsController().initialize($(this).data("metrics"), $(this));
    })
  })
  