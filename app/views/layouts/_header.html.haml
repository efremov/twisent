%header#header
  .navbar.navbar-fixed-top
    .container-fluid
      .navbar-header
        %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navigation-menu", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href => "#{root_path}", "data-no-turbolink" => true, alt: "Twisent"}
          Twisent
       
      %nav#navigation-menu.navbar-collapse.collapse
        %ul.nav.navbar-nav.navbar-left           
          %li
            %a{href: "#{companies_path}", alt: "#{t(:companies)}"}= t(:companies)

       
        %ul.nav.navbar-nav.navbar-right 
          - if user_signed_in? 
            %li
              %a{href: "#{destroy_user_session_path}", alt: "#{t(:log_out)}","data-method" => "delete"}= t(:log_out) 
          - else
            %li
              %a{href: "#{new_user_session_path}", alt: "#{t(:login)}"}= t(:login)
            %li
              %a.btn.btn-default{href: "#{new_user_registration_path}", alt: "#{t(:sign_up)}"}= t(:sign_up)

        
        
        
 
